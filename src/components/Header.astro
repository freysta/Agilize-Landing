<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 text-white backdrop-blur-md bg-azul-principal bg-opacity-90 border-b border-white border-opacity-10">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="text-2xl font-bold">
      <a href="/" class="flex items-center space-x-2 hover:scale-105 transition-transform duration-300">
        <img src="/src/assets/logoabreviadafunduazul.png" alt="Agilize" class="h-12 w-auto">
        <span class="hidden sm:block font-bold">Agilize</span>
      </a>
    </div>

    <nav id="desktop-menu" class="hidden md:flex items-center space-x-8">
      <a href="#sobre" class="relative hover:text-amarelo transition-all duration-300 before:absolute before:bottom-0 before:left-0 before:w-0 before:h-0.5 before:bg-amarelo before:transition-all before:duration-300 hover:before:w-full">
        Sobre
      </a>
      <a href="#servicos" class="relative hover:text-amarelo transition-all duration-300 before:absolute before:bottom-0 before:left-0 before:w-0 before:h-0.5 before:bg-amarelo before:transition-all before:duration-300 hover:before:w-full">
        Serviços
      </a>
      <a href="#diferenciais" class="relative hover:text-amarelo transition-all duration-300 before:absolute before:bottom-0 before:left-0 before:w-0 before:h-0.5 before:bg-amarelo before:transition-all before:duration-300 hover:before:w-full">
        Diferenciais
      </a>
      <a href="#depoimentos" class="relative hover:text-amarelo transition-all duration-300 before:absolute before:bottom-0 before:left-0 before:w-0 before:h-0.5 before:bg-amarelo before:transition-all before:duration-300 hover:before:w-full">
        Depoimentos
      </a>
    </nav>

    <div class="hidden md:flex items-center gap-4">
      <a href="#contato" class="bg-amarelo text-azul-principal px-6 py-3 rounded-full font-semibold hover:bg-yellow-300 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
        Fale Conosco
      </a>
    </div>

    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-white focus:outline-none p-2 rounded-lg hover:bg-white hover:bg-opacity-10 transition-colors duration-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-azul-principal bg-opacity-95 backdrop-blur-md border-t border-white border-opacity-10">
    <nav class="flex flex-col items-center space-y-6 py-8">
      <a href="#sobre" class="hover:text-amarelo transition-colors duration-300 text-lg font-medium">Sobre</a>
      <a href="#servicos" class="hover:text-amarelo transition-colors duration-300 text-lg font-medium">Serviços</a>
      <a href="#diferenciais" class="hover:text-amarelo transition-colors duration-300 text-lg font-medium">Diferenciais</a>
      <a href="#depoimentos" class="hover:text-amarelo transition-colors duration-300 text-lg font-medium">Depoimentos</a>
      <a href="#contato" class="mt-6 bg-amarelo text-azul-principal px-8 py-3 rounded-full font-semibold hover:bg-yellow-300 transform hover:scale-105 transition-all duration-300 shadow-lg">
        Fale Conosco
      </a>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById('main-header') as HTMLElement;
  const mobileMenuButton = document.getElementById('mobile-menu-button') as HTMLButtonElement;
  const mobileMenu = document.getElementById('mobile-menu') as HTMLElement;

  // Header scroll effect
  document.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header.classList.add('shadow-modern');
    } else {
      header.classList.remove('shadow-modern');
    }
  });

  // Mobile menu toggle
  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });

  // Close mobile menu when a link is clicked
  mobileMenu.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.tagName === 'A') {
      mobileMenu.classList.add('hidden');
    }
  });
</script>
